@model Dictionary<string, string>
<div class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close"
                data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-8">
                <input class="form-control blockName" type="text" required="required" placeholder="组件名称" value="@ViewBag.name">
            </div>
        </div>

    </div>
    <div class="modal-body">
        @foreach (var attr in Model) {
            <div class="form-group">
                <label class="col-sm-4 control-label" title="@attr.Key">@attr.Key</label>
                <div class="col-sm-8">
                    <input class="form-control attr" type="text" data-Key="@attr.Key" placeholder="默认值" value="@attr.Value">
                </div>
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default"
                data-dismiss="modal">
            关闭
        </button>
        <button class="btn btn-primary submit" data-action="@(ViewBag.id==null?"/BlockStep/building":"/BlockStep/save/"+ViewBag.id)">
            提交更改
        </button>
    </div>
</div>

